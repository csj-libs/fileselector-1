<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:minHeight="60dp">

    <ImageView
        android:id="@+id/iv"
        android:src="@drawable/fs_ic_folder"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <ImageView
        android:id="@+id/fsIvSelect"
        android:src="@drawable/fs_chkbox_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    
    <ImageView
        android:id="@+id/fsivDel"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/fs_ic_del"/>
    
    <Button
        android:id="@+id/fsChkView"
        android:focusable="false"
        android:background="@color/fsTransparent"
        android:layout_alignParentEnd="true"
        android:layout_width="56dp"
        android:layout_height="match_parent"/>
    
    <LinearLayout
        android:id="@+id/fslayoutInfo"
        android:orientation="vertical"
        android:layout_toEndOf="@id/iv"
        android:layout_toStartOf="@id/fsIvSelect"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fsTvName"
            android:text="html入门到精通"
            android:textColor="@color/fsTextColor"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fsTvDesc"
            android:text="5.4M"
            android:textSize="11dp"
            android:textColor="@color/fsEditHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fsDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>